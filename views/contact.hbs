    <form class="content" action="/contact" method="POST">

        <h1 class="fw-bolder text-center">GET IN TOUCH</h1>
        <br>
        <div class="col-md-5">
            <label for="name" class="form-label">Name</label>
            <input type="text" name ='name' class="form-control shadow-lg  mb-5 bg-body" pattern="[A-Za-z]{3}" id="name">
        </div>
        <div class="col-md-5">
            <label for="inputEmail4" class="form-label">Email</label>
            <input type="text" name='mail' class="form-control shadow-lg  mb-5 bg-body" id="email">
        </div>
        <div class="col-md-5">
            <label for="inputAddress" class="form-label">Phone Number</label>
            <input type="text" name="hape" class="form-control shadow-lg  mb-5 bg-body" id="nohp">
        </div>
        <div class="col-md-5">
            <label for="sbj" class="form-label">Subject</label>
            <select id="sbj" class="form-select shadow-lg  mb-5 bg-body">
                  <option selected hidden></option>
                  <option value="Let's Talk" name="talk">Let's Talk</option>
                  <option value="Let's Collaboration" name="collab">Let's Collaboration</option>
                 <option value="I am Hiring" name="hiring">I am Hiring</option>
                </select>
        </div>
        <div class="row col-md-5" id="txtarea">
            <label for="msg" class="form-label">Your Message</label>
            <textarea class="form-control shadow-lg  mb-5 bg-body" style="resize:none" name='pesan' id="msg" rows="5"></textarea>
        </div>
        <button type="submit" class="btn btn-dark rounded-pill" >submit</button>

    </form>

